<% if @article.errors.any? %>
  <div class="alert">
    <p>Não foi possível alterar o artigo</p>
    <p>Confira os erros abaixo:</p>
    <ul>
      <% @article.errors.full_messages.each do |error|%>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end%>


<%= form_with model: @article do |form| %>

  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>